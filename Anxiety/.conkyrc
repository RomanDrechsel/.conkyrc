conky.config = {
	background = true,
	update_interval = 1,
	cpu_avg_samples = 2,
	net_avg_samples = 2,
	out_to_console = false,
	override_utf8_locale = true,
	double_buffer = true,
	no_buffers = true,
	text_buffer_size = 32768,
	imlib_cache_size = 0,
	own_window = true,
	own_window_type = 'panel',
	own_window_argb_visual = false,
	own_window_hints = 'undecorated,above,sticky,skip_taskbar,skip_pager',
	own_window_colour = '000000',
	own_window_transparent = false,
	border_inner_margin = 0,
	border_outer_margin = 0,
	xinerama_head = 1,
	alignment = 'top_right',
	gap_x = 0,
	gap_y = 0,
	use_xft = true,
	font = 'Unispace:size=7',
	uppercase = false,
	default_color = 'white',
	maximum_width = 300,
	minimum_width = 300,
	minimum_height = 1500,
	draw_graph_borders = true,
	temperature_unit = 'celsius',
	color1 = 'FeF580',
	color2 = '90EE90',
	font1 = 'EP Boxi:bold:10',
	font2 = 'Ubuntu:bold:size=10',
	font3 = 'Ubuntu:size=10',
	font4 = 'Ubuntu:size=11',
	font5 = 'Unispace:size=7'
}

conky.text = [[#{background}
# Clock
${voffset 15}${color 72aeef}${font EP Boxi:bi:size=30}${alignc}${time %H:%M:%S}${font}
${voffset 5}${font Young Serif:size=16}${color}${alignc}${time %A, %d. %B %Y}${font}

# System
${offset 5}${color1}${font1}System ${hr 2}${font}${color}${voffset 5}
${offset 5}${font2}${no_update $sysname} ${no_update $kernel}${font3}${alignr}${no_update $machine} 
${offset 5}${font2}Host / User${alignr}${font3}${no_update $nodename} / ${exec whoami} 
${offset 5}${font2}Uptime${alignr}${font3}$uptime 
${offset 5}${font2}File System${alignr}${font3}${no_update ${fs_type}} 
${offset 5}${font2}Processes${alignr}${font3}${execi 1 ps aux | wc -l} ${font}

# CPU
${offset 5}${color1}${font1}CPU ${hr 2}${font}${color}${voffset 5}
${offset 5}${font4}${exec grep model /proc/cpuinfo | cut -d : -f2 | tail -1 | sed 's/\s//'} 
${offset 5}${color2}${cpugraph cpu0 45,0 90ee90 ff0000 -t} ${color}
${offset 5}${font4}CPU: ${cpu cpu0}% ${goto 80}${color2}${voffset 1}${cpubar cpu0 10,0}${color}${font}

# RAM
${offset 5}${color1}${font1}RAM ${hr 2}${font}${voffset 5}
${offset 5}${color2}${memgraph 45,0 90ee90 ff0000 -t} ${font}${color}
${offset 5}${font2}RAM ${font3}${alignc}${mem} / ${memmax}${alignr}${memperc}% 
${offset 5}${font2}SWAP ${font3}${alignc}${swap} / ${swapmax}${alignr}${swapperc}% 

# Graphics 
${offset 5}${color1}${font1}Graphics ${hr 2}${font}${color}${voffset 5}
${offset 5}${font4}${no_update ${nvidia modelname}}${alignr}${font Ubuntu:size=8}${no_update ${nvidia driverversion}} 
${offset 5}${font2}${color2}${nvidiagraph gpufreq 45,0 90ee90 ff0000 100 -t 0} ${color}
${offset 5}${font2}GPU ${font3}${goto 130}${nvidia gputemp} CÂ° ${alignr}${nvidia gpufreqcur} / ${no_update ${nvidia gpufreqmax}} Mhz 
${offset 5}${font2}Memory ${font3}${alignr}${nvidia mem} / ${no_update ${nvidia memtotal}} Mhz 
${offset 5}${font2}Fan ${alignr}${font3}${execi 1 nvidia-smi --query-gpu=fan.speed --format=csv,noheader,nounits}% ${font}

# Storage
${offset 5}${font1}${color1}Storage ${hr 2}${font}${color}${voffset 5}
${offset 5}${font3}${alignc}${fs_used /} / ${fs_size /}${alignr}${fs_used_perc /}% 
${offset 5}${color2}${fs_bar /} ${font}

# Network
${offset 5}${color1}${font1}Network ${hr 2}${font}${voffset 5}
${offset 5}${color}Local IP: ${goto 140}Ping: ${alignr}External IP:
${offset 5}${font2}${execi 600 ip a | grep inet | grep -vw lo | grep -v inet6 | cut -d \/ -f1 | sed 's/[^0-9\.]*//g'}${goto 140}${execi 10 ping -c 1 -q -i 0.2 -w 1 google.com | awk -F'/' 'END{print int($6)}'}ms ${alignr}${execi 600 wget -q -O- http://ipecho.net/plain; echo} ${font}
${offset 5}${voffset 5}${font5}Down: ${downspeed enp0s31f6} ${alignr}Up: ${upspeed enp0s31f6} 
${offset 5}${color2}${downspeedgraph enp0s31f6 80,145 90ee90 ff0000 14417920 -t}${alignr}${upspeedgraph enp0s31f6 80,145 90ee90 ff0000 4063232 -t} ${font}
# graphscale: down: 110Mbit/s - up: 31Mbit/s
# calculation: 
# 110MBit/s / 8 = 13.75Mb/s (1 byte = 8 bit)<br />
# 13.75Mb/s * 1048576 = 14417920 b/s (1 megabyte = 1024*1024 bytes)
#
#Processes
${offset 5}${color1}${font1}Processes ${hr 2}${font}${voffset 5}
${offset 5}${color}${font Unispace:bold:size=9}Name ${goto 150}PID ${goto 205}CPU ${alignr} MEM ${font}
${offset 5}${font3}${top name 1} ${font5}${goto 130}${top pid 1} ${goto 185}${top cpu 1}% ${alignr}${top mem_res 1} ${font3}
${offset 5}${top name 2} ${font5}${goto 130}${top pid 2} ${goto 185}${top cpu 2}% ${alignr}${top mem_res 2} ${font3}
${offset 5}${top name 3} ${font5}${goto 130}${top pid 3} ${goto 185}${top cpu 3}% ${alignr}${top mem_res 3} ${font3}
${offset 5}${top name 4} ${font5}${goto 130}${top pid 4} ${goto 185}${top cpu 4}% ${alignr}${top mem_res 4} ${font3}
${offset 5}${top name 5} ${font5}${goto 130}${top pid 5} ${goto 185}${top cpu 5}% ${alignr}${top mem_res 5} ${font3}
${offset 5}${top name 6} ${font5}${goto 130}${top pid 6} ${goto 185}${top cpu 6}% ${alignr}${top mem_res 6} ${font3}
${offset 5}${top name 7} ${font5}${goto 130}${top pid 7} ${goto 185}${top cpu 7}% ${alignr}${top mem_res 7} ${font3}
${offset 5}${top name 8} ${font5}${goto 130}${top pid 8} ${goto 185}${top cpu 8}% ${alignr}${top mem_res 8} ${font3}
${offset 5}${top name 9} ${font5}${goto 130}${top pid 9} ${goto 185}${top cpu 9}% ${alignr}${top mem_res 9} ${font3}
${offset 5}${top name 10} ${font5}${goto 130}${top pid 10} ${goto 185}${top cpu 10}% ${alignr}${top mem_res 10} ${font3}
]]